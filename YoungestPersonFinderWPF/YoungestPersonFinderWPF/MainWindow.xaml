<Window x:Class="YoungestPersonFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Youngest Person Finder" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки "Загрузить данные" и "Сохранить результаты" -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="btnLoadData" Content="Загрузить данные" Click="btnLoadData_Click" Margin="0 0 10 0"/>
            <Button x:Name="btnSaveResults" Content="Сохранить результаты" Click="btnSaveResults_Click"/>
        </StackPanel>

        <!-- ListBox для отображения результатов -->
        <ListBox x:Name="resultsListBox" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>